<!DOCTYPE html> 
<html> 
  <head>
   	<meta charset="utf-8"/>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="css/style.css" />
    <link rel="stylesheet" href="css/foundation.css" />

    <script src="js/vendor/modernizr.js"></script>

  	<title>Dashboaaaaaaad  4 train yo</title>
  </head>

  <body>

  	<!--TITLE-->
  	<div id="title" class="row">
	  	<div class="small-12 columns">
	  		<h1> FUCKIN' TRAINS, MAN</h1>
	  	</div>

  	</div>

	<!--NAV-->
  	<div id="nav" class="row">
  		<div class="small-6 small-centered columns">

			<dl class="tabs" data-tab>
	        <% for(var i=1; i<=noOfTabs; i++) {%> 
				    <dd><a href="#panel<%= i %>">Tab <%=i%></a></dd>
	        <% } %>
			</dl>
			<div class="tabs-content">
	         <% for(var i=1; i<=noOfTabs; i++) {%> 
		         <% if (i == 1) { %>
					<div class="content active" id="panel<%= i %>">
					  <p>This is the first panel of the basic tab example. This is tab <%=i%></p>
					</div>
				  <% } else {%>
				  	<div class="content" id="panel<%= i %>">
					  <p>This is the <%= i %>th panel of the basic tab example. This is tab <%=i%></p>
					</div>
				  <% } %>
        	  <% } %>
			</div>

		</div>
  	</div>

	<!--DATA-->
  	<div id="data" class="row">

  		<div id="currentData" class="small-12 medium-4 columns">
  		  <h1>Current:</h1>
			<table>
			  <thead>
			    <tr>
			      <th>Data type</th>
			      <th>Value</th>
			    </tr>
			  </thead>
			  <tbody>
			    <tr>
			      <td>Temperature:</td>
			      <td>tempVal</td>
			    </tr>
			    <tr>
			      <td>Air Pressure:</td>
			      <td>airVal</td>
			    </tr>			    
			    <tr>
			      <td>Train Speed</td>
			      <td>speedVal</td>
			    </tr>			    
			    <tr>
			      <td>General Position</td>
			      <td>posVal</td>
			    </tr>			    
			    <tr>
			      <td>Methane Density</td>
			      <td>methVal</td>
			    </tr>			    
			    <tr>
			      <td>Light Level</td>
			      <td>lightVal</td>
			    </tr>
			  </tbody>
			</table>
  		</div>

  		<div id="timeSeries" class="small-12 medium-8 columns">
  			<h1>Time Series Data:</h1>
			<ul class="small-block-grid-1 medium-block-grid-2">
			  <li><p>Temperature</p><img src="http://placehold.it/300x200"></li>
			  <li><p>Air Pressure</p><img src="http://placehold.it/300x200"></li>
			  <li><p>Train Speed</p><img src="http://placehold.it/300x200"></li>
			  <li><p>General Position</p><img src="http://placehold.it/300x200"></li>
			  <li><p>Methane Density</p><img src="http://placehold.it/300x200"></li>
			  <li><p>Light Level</p><img src="http://placehold.it/300x200"></li>
			</ul>
  		</div>

  	</div>

  	<!--scripts-->
	  <script src="/js/vendor/jquery.js"></script>
	  <script src="/js/vendor/fastclick.js"></script>
	  <script src="js/foundation.min.js"></script>
	  <script src="js/foundation/foundation.tab.js"></script>
	  <script>
	  $(document).foundation();
	  </script>
  </body> 
</html> 
